{
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "ts", "meta", "messages", "widgets", "attachments"],
  "properties": {
    "kind": {
      "type": "string",
      "enum": ["widget"]
    },

    "ts": {
      "type": "string",
      "description": "ISO-8601 timestamp"
    },

    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["widget_name", "change_type", "severity", "summary"],
      "properties": {
        "widget_name": {
          "type": "string",
          "enum": ["GEX", "Heatmap", "MarketMode", "VIXRegime", "BiasLFI"]
        },

        "change_type": {
          "type": "string",
          "enum": [
            "threshold_cross",
            "trend_change",
            "volatility_shift",
            "regime_shift",
            "structural_flip",
            "compression",
            "expansion",
            "other"
          ]
        },

        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },

        "summary": {
          "type": "string",
          "description": "Summary of what changed in the widget state."
        },

        "inline_table": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string" },
              "value": { "type": ["string", "number"] }
            }
          }
        },

        "inline_chart": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string" },
            "data": {
              "type": "array",
              "items": { "type": "number" }
            },
            "labels": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },

    "messages": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observer", "activator", "navigator"],
      "properties": {
        "observer": { "type": "string" },
        "activator": { "type": "string" },
        "navigator": { "type": "string" }
      }
    },

    "widgets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["GEX", "Heatmap", "MarketMode", "VIXRegime", "BiasLFI"],
      "properties": {
        "GEX": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "Heatmap": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "MarketMode": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "VIXRegime": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "BiasLFI": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        }
      }
    },

    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["chart", "table", "image", "document"]
          },
          "url": { "type": "string" },
          "caption": { "type": "string" }
        }
      }
    }
  }
}