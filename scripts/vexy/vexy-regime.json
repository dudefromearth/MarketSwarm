{
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "ts", "meta", "messages", "widgets", "attachments"],
  "properties": {
    "kind": {
      "type": "string",
      "enum": ["regime"]
    },

    "ts": {
      "type": "string",
      "description": "ISO-8601 timestamp"
    },

    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["regime_name", "regime_type", "severity", "summary"],
      "properties": {
        "regime_name": {
          "type": "string",
          "description": "Short name of the regime (e.g., 'Holiday Liquidity', 'High Volatility', 'FOMC Week')."
        },

        "regime_type": {
          "type": "string",
          "enum": [
            "volatility",
            "liquidity",
            "seasonal",
            "fomc_cycle",
            "earnings_season",
            "macro_cycle",
            "market_mode",
            "other"
          ]
        },

        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"]
        },

        "summary": {
          "type": "string",
          "description": "Short explanation of what defines this regime."
        },

        "drivers": {
          "type": "array",
          "description": "List of causal or structural drivers behind the regime.",
          "items": { "type": "string" }
        },

        "inline_table": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string" },
              "value": { "type": ["string", "number"] }
            }
          }
        },

        "inline_chart": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string" },
            "data": {
              "type": "array",
              "items": { "type": "number" }
            },
            "labels": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },

    "messages": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observer", "activator", "navigator"],
      "properties": {
        "observer": { "type": "string" },
        "activator": { "type": "string" },
        "navigator": { "type": "string" }
      }
    },

    "widgets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["GEX", "Heatmap", "MarketMode", "VIXRegime", "BiasLFI"],
      "properties": {
        "GEX": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "Heatmap": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "MarketMode": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "VIXRegime": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "BiasLFI": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        }
      }
    },

    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["chart", "table", "image", "document"]
          },
          "url": { "type": "string" },
          "caption": { "type": "string" }
        }
      }
    }
  }
}