{
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "ts", "meta", "messages", "widgets", "attachments"],
  "properties": {
    "kind": {
      "type": "string",
      "enum": ["event"]
    },

    "ts": {
      "type": "string",
      "description": "ISO-8601 timestamp"
    },

    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "event_name",
        "event_type",
        "event_phase",
        "severity"
      ],
      "properties": {
        "event_name": { "type": "string" },
        "event_type": {
          "type": "string",
          "enum": [
            "economic_report",
            "market_threshold",
            "vol_regime_shift",
            "gamma_squeeze",
            "liquidity_shock",
            "breaking_news",
            "other"
          ]
        },
        "event_phase": {
          "type": "string",
          "enum": ["pre", "post"]
        },
        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"]
        },

        "indicator": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name"],
          "properties": {
            "name": { "type": "string" },
            "unit": { "type": "string" },
            "expected": { "type": ["string", "number"] },
            "actual": { "type": ["string", "number"] },
            "previous": { "type": ["string", "number"] }
          }
        },

        "summary": { "type": "string" },

        "inline_chart": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string" },
            "data": {
              "type": "array",
              "items": { "type": "number" }
            },
            "labels": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },

        "inline_table": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string" },
              "value": { "type": ["string", "number"] }
            }
          }
        }
      }
    },

    "messages": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observer", "activator", "navigator"],
      "properties": {
        "observer": { "type": "string" },
        "activator": { "type": "string" },
        "navigator": { "type": "string" }
      }
    },

    "widgets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["GEX", "Heatmap", "MarketMode", "VIXRegime", "BiasLFI"],
      "properties": {
        "GEX": { "type": "object", "additionalProperties": false, "properties": { "summary": { "type": "string" } } },
        "Heatmap": { "type": "object", "additionalProperties": false, "properties": { "summary": { "type": "string" } } },
        "MarketMode": { "type": "object", "additionalProperties": false, "properties": { "summary": { "type": "string" } } },
        "VIXRegime": { "type": "object", "additionalProperties": false, "properties": { "summary": { "type": "string" } } },
        "BiasLFI": { "type": "object", "additionalProperties": false, "properties": { "summary": { "type": "string" } } }
      }
    },

    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["chart", "table", "image", "document"]
          },
          "url": { "type": "string" },
          "caption": { "type": "string" }
        }
      }
    }
  }
}