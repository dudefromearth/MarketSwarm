{
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "ts", "meta", "messages", "widgets", "attachments"],
  "properties": {
    "kind": {
      "type": "string",
      "enum": ["epoch"]
    },

    "ts": {
      "type": "string",
      "description": "ISO-8601 timestamp"
    },

    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "epoch_name",
        "epoch_time",
        "tldr",
        "since_last_epoch",
        "market_structure",
        "macro_context"
      ],
      "properties": {
        "epoch_name": {
          "type": "string",
          "description": "Name of epoch (Premarket, Post-Open, Power Hour, etc.)"
        },

        "epoch_time": {
          "type": "string",
          "description": "\"HH:MM\" time that defines the epoch"
        },

        "tldr": {
          "type": "string",
          "description": "Short summary of the most important thing right now."
        },

        "since_last_epoch": {
          "type": "string",
          "description": "What changed since the previous epoch."
        },

        "market_structure": {
          "type": "string",
          "description": "Summary of immediate market structure conditions as of this epoch."
        },

        "macro_context": {
          "type": "string",
          "description": "High-level macro or scheduled events context affecting this epoch."
        },

        "inline_table": {
          "type": "array",
          "description": "Lightweight table for quick structural or macro snapshots.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string" },
              "value": { "type": ["string", "number"] }
            }
          }
        },

        "inline_chart": {
          "type": "object",
          "description": "Optional inline chart object for small line/bar charts.",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string" },
            "data": {
              "type": "array",
              "items": { "type": "number" }
            },
            "labels": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },

    "messages": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observer", "activator", "navigator"],
      "properties": {
        "observer": { "type": "string" },
        "activator": { "type": "string" },
        "navigator": { "type": "string" }
      }
    },

    "widgets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["GEX", "Heatmap", "MarketMode", "VIXRegime", "BiasLFI"],
      "properties": {
        "GEX": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "Heatmap": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "MarketMode": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "VIXRegime": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        },
        "BiasLFI": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "summary": { "type": "string" } }
        }
      }
    },

    "attachments": {
      "type": "array",
      "description": "External charts or tables that MarketSwarm generates.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["chart", "table", "image", "document"]
          },
          "url": { "type": "string" },
          "caption": { "type": "string" }
        }
      }
    }
  }
}