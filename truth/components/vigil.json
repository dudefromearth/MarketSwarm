{
  "id": "vigil",
  "meta": {
    "name": "Market Event Watcher",
    "description": "Filters for market events, sends to Vexy."
  },
  "access_points": {
    "publish_to": [
      { "bus": "market-redis", "key": "vigil:events" },
      { "bus": "system-redis", "key": "vigil:heartbeat" }
    ],
    "subscribe_to": [
      { "bus": "market-redis", "key": "massive:spot" },
      { "bus": "market-redis", "key": "massive:chain:latest" }
    ]
  },
  "heartbeat": {
    "interval_sec": 5,
    "ttl_sec": 15
  },
  "dependencies": []
}