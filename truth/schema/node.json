{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MarketSwarm Node Definition",
  "type": "object",
  "required": ["version", "buses", "components"],
  "properties": {
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "node": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "env":  { "type": "string" }
      },
      "additionalProperties": false
    },
    "buses": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["url", "role"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "role": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}