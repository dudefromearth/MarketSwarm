# ===== MarketSwarm (macOS / Homebrew) =====

# Project root
MS_ROOT="${HOME}/MarketSwarm"

# Homebrew (Apple Silicon)
BREW_PREFIX="/opt/homebrew"
BREW_BIN="${BREW_PREFIX}/bin/brew"
BASH_PATH="${BREW_PREFIX}/bin/bash"
REDIS_SERVER_PATH="${BREW_PREFIX}/bin/redis-server"
REDIS_CLI_PATH="${BREW_PREFIX}/bin/redis-cli"

# Bus order + ports (your mapping)
# system → 6379, market → 6380, intel → 6381, echo → 6382
REDIS_SYSTEM_PORT="6379"
REDIS_MARKET_PORT="6380"
REDIS_INTEL_PORT="6381"
REDIS_ECHO_PORT="6382"

# URLs derived from ports
REDIS_SYSTEM_URL="redis://localhost:${REDIS_SYSTEM_PORT}"
REDIS_MARKET_URL="redis://localhost:${REDIS_MARKET_PORT}"
REDIS_INTEL_URL="redis://localhost:${REDIS_INTEL_PORT}"
REDIS_ECHO_URL="redis://localhost:${REDIS_ECHO_PORT}"

# Optional passwords (leave blank if none)
REDIS_SYSTEM_PASS=""
REDIS_MARKET_PASS=""
REDIS_INTEL_PASS=""
REDIS_ECHO_PASS=""

# Standard dirs under Homebrew
REDIS_CONF_DIR="${BREW_PREFIX}/etc/redis"
REDIS_VAR_DIR="${BREW_PREFIX}/var"
REDIS_RUN_DIR="${BREW_PREFIX}/var/run/redis"
REDIS_LOG_DIR="${BREW_PREFIX}/var/log/redis"

# Default data files (can override per-run with flags)
TRUTH_JSON_PATH="${MS_ROOT}/scripts/truth.json"
LUA_DIFF_PATH="${MS_ROOT}/scripts/lua_diff.lua"